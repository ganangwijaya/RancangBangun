<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/merahitem"
    tools:context=".Login">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/ataslogin">
        </RelativeLayout>

        <TextView
            android:layout_width="200dp"
            android:layout_height="99dp"
            android:fontFamily="@font/gothamblack"
            android:text="Halaman Login"
            android:textColor="@color/orengelap"
            android:textSize="38sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"/>

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:background="@color/orengelap"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="30dp"></RelativeLayout>

        <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:src="@drawable/logo"
        />

        <EditText
            android:id="@+id/et_username"
            android:layout_width="310dp"
            android:layout_height="60dp"
            android:autofillHints=""
            android:background="@drawable/form_login"
            android:ems="10"
            android:fontFamily="@font/gothamblack"
            android:gravity="center"
            android:hint="USERNAME"
            android:inputType="textPersonName"
            android:textColor="@color/orengelap"
            android:textColorHint="@color/orengelap"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="370dp"
            />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="310dp"
            android:layout_height="60dp"
            android:autofillHints=""
            android:background="@drawable/form_login"
            android:fontFamily="@font/gothamblack"
            android:gravity="center"
            android:hint="PASSWORD"
            android:inputType="textPassword"
            android:textColor="@color/orengelap"
            android:textColorHint="@color/orengelap"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="460dp"/>

        <Button
            android:id="@+id/button_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tombol"
            android:fontFamily="@font/gothamblack"
            android:text="LOGIN"
            android:textColor="#FFFFFF"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"/>

    <Button
        android:id="@+id/button_register"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:shadowColor="@android:color/transparent"
        android:fontFamily="@font/gothamblack"
        android:textAllCaps="false"
        android:textSize="14dp"
        android:text="Belum punya akun? daftar disini!"
        android:textColor="@color/orengelap"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"/>





</RelativeLayout>
</android.support.constraint.ConstraintLayout>